                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/charge3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"

