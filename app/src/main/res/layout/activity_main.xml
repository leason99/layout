            android:layout_height="match_parent"
            android:layout_above="@+id/set_pwd"
            android:layout_below="@+id/synch"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bag_frame_status"
                    android:onClick="bagDeatil"
                    android:id="@+id/bag1_btn">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"

                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:id="@+id/itemlayout1"
                        android:elevation="19dp"
                        android:layout_height="30dp">

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/water"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:id="@+id/water1" />

                        <ImageView
                            android:layout_weight="1"

                            android:src="@drawable/food"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:id="@+id/food1" />

                        <ImageView
                            android:layout_weight="1"

                            android:src="@drawable/battery"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:id="@+id/battery1" />

                        <ImageView
                            android:layout_weight="1"
                            android:src="@drawable/bag"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:id="@+id/bag1" />
                    </LinearLayout>

                    <leason.wayout.MyTextView
                        android:text="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView1"
                        android:textAlignment="center"
                        android:layout_margin="5dp"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:background="@drawable/line"
                        android:layout_height="1dp"
                        android:id="@+id/bag1_linetop"
                        android:layout_below="@id/textView1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp" />

                    <leason.wayout.MyTextView
                        android:text="行動電源狀態"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2"
                        android:layout_below="@+id/bag1_linetop"
                        android:textAlignment="center"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp" />

                    <ImageView
                        android:id="@+id/charge1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="false"
                        android:layout_above="@id/itemlayout1"
                        android:layout_below="@id/textView2"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="true"
                        android:layout_weight="1"
                        android:src="@drawable/charge"
                        android:adjustViewBounds="true"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginBottom="5dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/line"
                        android:id="@+id/bag1_lineend"
                        android:layout_above="@id/itemlayout1"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
